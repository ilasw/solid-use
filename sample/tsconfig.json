{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": "..",
    "paths": {
      "@/core/*": [
        "../packages/core/src/*"
      ]
    }
  },
  "include": [
    "../packages/core",
    "./src",
  ],
  "exclude": [
    "tests",
    "node_modules"
  ]
}
