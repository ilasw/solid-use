{
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": "../",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "target": "ES2017",
    "outDir": "./dist",
    "baseUrl": ".",
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/core": [
        "../packages/core/src"
      ],
      "@/core/*": [
        "../packages/core/src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "tests",
    "node_modules"
  ]
}
